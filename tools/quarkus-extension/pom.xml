<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>io.smallrye</groupId>
        <artifactId>smallrye-async-api-tools</artifactId>
        <version>1.0.0-SNAPSHOT</version>
    </parent>

    <packaging>pom</packaging>
    <artifactId>quarkus-extension</artifactId>
    <name>SmallRye: MicroProfile AsyncAPI Tools: Quarkus Extension</name>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>

        <version.quarkus>1.8.3.Final</version.quarkus>
        <version.compiler-plugin>3.8.1</version.compiler-plugin>
        <version.jakartaee>8.0.0</version.jakartaee>
        <version.asyncapi>1.0.0-SNAPSHOT</version.asyncapi>
    </properties>

    <modules>
        <module>deployment</module>
        <module>runtime</module>
    </modules>

    <developers>
        <developer>
            <name>Stephan Mueller</name>
            <email>stephan.mueller@openknowledge.de</email>
            <organization>open knowledge GmbH</organization>
        </developer>
        <developer>
            <name>Max Weis</name>
            <email>max.weis@openknowledge.de</email>
            <organization>open knowledge GmbH</organization>
        </developer>
    </developers>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <version>${version.compiler-plugin}</version>
                </plugin>
                <plugin>
                    <groupId>io.quarkus</groupId>
                    <artifactId>quarkus-bootstrap-maven-plugin</artifactId>
                    <version>${version.quarkus}</version>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>
    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>io.quarkus</groupId>
                <artifactId>quarkus-bom</artifactId>
                <version>${version.quarkus}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <dependency>
                <groupId>jakarta.platform</groupId>
                <artifactId>jakarta.jakartaee-api</artifactId>
                <version>${version.jakartaee}</version>
            </dependency>
            <dependency>
                <groupId>io.smallrye</groupId>
                <artifactId>smallrye-asyncapi-api-core</artifactId>
                <version>${version.asyncapi}</version>
            </dependency>
            <dependency>
                <groupId>io.smallrye</groupId>
                <artifactId>smallrye-async-api-spec-api</artifactId>
                <version>${version.asyncapi}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>
</project>
